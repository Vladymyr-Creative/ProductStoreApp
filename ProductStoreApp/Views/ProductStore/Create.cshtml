@model ProductStoreApp.Models.ProductStore

@{
    ViewData["Title"] = "Create";
}

<h4>Add Products to ProductStore</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="ProductStore" asp-action="Create"
              data-ajax="true" data-ajax-method="POST" data-ajax-update="#contentWrapp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>            
            <input type="hidden" asp-for="StoreId" />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.StoreId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
